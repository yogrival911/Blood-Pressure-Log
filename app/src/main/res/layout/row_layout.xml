<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/row_design"
    android:elevation="1dp">

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:text="88"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="22-April"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="12:12 PM"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewBp"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Sys/Dia"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:paddingTop="8dp"
        app:srcCompat="@drawable/heart_green" />

    <TextView
        android:id="@+id/textViewMark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="High Stage-2"
        android:textAlignment="center"
        android:textSize="10sp" />

</LinearLayout>
